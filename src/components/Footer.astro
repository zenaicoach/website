<script>
    // Footer Navigation Logic
    function updateFooterNavigationLinks() {
        const currentPath = window.location.pathname;
        const isHomePage = currentPath === '/' || currentPath === '/index.html' || currentPath.endsWith('/');

        // Update footer navigation links
        const footerNavLinks = document.querySelectorAll('.footer-nav-link');
        footerNavLinks.forEach(link => {
            if (isHomePage) {
                link.href = link.getAttribute('data-home');
            } else {
                // For all other pages, use absolute path to home page sections
                link.href = link.getAttribute('data-opportunities');
            }
        });
    }

    // Run on page load
    document.addEventListener('DOMContentLoaded', updateFooterNavigationLinks);
</script>