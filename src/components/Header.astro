// Header component with navigation
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-lg border-b border-slate-200/80 transition-all duration-300">
    <div class="container mx-auto px-6 py-3 flex justify-between items-center">
        <a href="./" class="text-2xl font-bold text-slate-900">
            ZenAI.Coach
        </a>
        <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
            <a href="#problem" class="nav-link text-slate-600 hover:text-slate-900 transition-colors" data-home="#problem" data-opportunities="../#problem">The Silent Pandemic</a>
            <a href="#opportunity" class="nav-link text-slate-600 hover:text-slate-900 transition-colors" data-home="#opportunity" data-opportunities="../#opportunity">The Opportunity</a>
            <a href="#mission-first" class="nav-link text-slate-600 hover:text-slate-900 transition-colors" data-home="#mission-first" data-opportunities="../#mission-first">Mission First</a>
            <a href="#zen-ai-coach" class="nav-link text-slate-600 hover:text-slate-900 transition-colors" data-home="#zen-ai-coach" data-opportunities="../#zen-ai-coach">Zen AI Coach</a>
                                    <a href="./opportunities" class="text-slate-600 hover:text-slate-900 transition-colors">Join Our Mission</a>
                        <a href="./reflections" class="text-slate-600 hover:text-slate-900 transition-colors">Reflections</a>
                        <a href="./about" class="text-slate-600 hover:text-slate-900 transition-colors">About</a>
        </nav>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-slate-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 border-t border-slate-200">
        <a href="#problem" class="mobile-nav-link block py-2 text-slate-600 hover:text-slate-900" data-home="#problem" data-opportunities="../#problem">The Silent Pandemic</a>
        <a href="#opportunity" class="mobile-nav-link block py-2 text-slate-600 hover:text-slate-900" data-home="#opportunity" data-opportunities="../#opportunity">The Opportunity</a>
        <a href="#mission-first" class="mobile-nav-link block py-2 text-slate-600 hover:text-slate-900" data-home="#mission-first" data-opportunities="../#mission-first">Mission First</a>
        <a href="#zen-ai-coach" class="mobile-nav-link block py-2 text-slate-600 hover:text-slate-900" data-home="#zen-ai-coach" data-opportunities="../#zen-ai-coach">Zen AI Coach</a>
                            <a href="./opportunities" class="block py-2 text-slate-600 hover:text-slate-900">Join Our Mission</a>
                    <a href="./reflections" class="block py-2 text-slate-600 hover:text-slate-900">Reflections</a>
                    <a href="./about" class="block py-2 text-slate-600 hover:text-slate-900">About</a>
    </div>
</header>

<script>
    // Mobile Menu Toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    }

    // Smart Navigation Logic
    function updateNavigationLinks() {
        const currentPath = window.location.pathname;
        const isHomePage = currentPath === '/' || currentPath === '/index.html' || currentPath.endsWith('/');
        const isOpportunitiesPage = currentPath.includes('/opportunities');

        // Update desktop navigation links
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            if (isHomePage) {
                link.href = link.getAttribute('data-home');
            } else if (isOpportunitiesPage) {
                link.href = link.getAttribute('data-opportunities');
            } else {
                // For other pages (about, reflections), link back to home page sections
                link.href = '../' + link.getAttribute('data-home');
            }
        });

        // Update mobile navigation links
        const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
        mobileNavLinks.forEach(link => {
            if (isHomePage) {
                link.href = link.getAttribute('data-home');
            } else if (isOpportunitiesPage) {
                link.href = link.getAttribute('data-opportunities');
            } else {
                // For other pages (about, reflections), link back to home page sections
                link.href = '../' + link.getAttribute('data-home');
            }
        });
    }

    // Run on page load
    document.addEventListener('DOMContentLoaded', updateNavigationLinks);
</script>