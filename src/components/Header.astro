---
// Header component with navigation
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-lg border-b border-slate-200/80 transition-all duration-300">
    <div class="container mx-auto px-6 py-3 flex justify-between items-center">
        <a href="#" class="text-2xl font-bold text-slate-900">
            Zen AI
        </a>
        <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
            <a href="#problem" class="text-slate-600 hover:text-slate-900 transition-colors">The Silent Pandemic</a>
            <a href="#opportunity" class="text-slate-600 hover:text-slate-900 transition-colors">The Opportunity</a>
            <a href="#mission-first" class="text-slate-600 hover:text-slate-900 transition-colors">Mission First</a>
            <a href="#zen-ai-coach" class="text-slate-600 hover:text-slate-900 transition-colors">Zen AI Coach</a>
            <a href="/opportunities" class="text-slate-600 hover:text-slate-900 transition-colors">Opportunities</a>
        </nav>
        <a href="#developers" class="hidden md:inline-block btn-primary">Call for Developers</a>
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-slate-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 border-t border-slate-200">
        <a href="#problem" class="block py-2 text-slate-600 hover:text-slate-900">The Silent Pandemic</a>
        <a href="#opportunity" class="block py-2 text-slate-600 hover:text-slate-900">The Opportunity</a>
        <a href="#mission-first" class="block py-2 text-slate-600 hover:text-slate-900">Mission First</a>
        <a href="#zen-ai-coach" class="block py-2 text-slate-600 hover:text-slate-900">Zen AI Coach</a>
        <a href="/opportunities" class="block py-2 text-slate-600 hover:text-slate-900">Opportunities</a>
        <a href="#developers" class="block mt-4 text-center btn-primary w-full">Call for Developers</a>
    </div>
</header>

<script>
    // Mobile Menu Toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    }
</script>